<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_mine"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <ImageView
            android:id="@+id/iv_img_face"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y100"
            android:scaleType="fitXY"
            android:src="@drawable/img_face" />

        <LinearLayout
            android:id="@+id/ll_dot_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x70"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dot_chat"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:background="@drawable/circle_notice_shape"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/White_FFFFFF"
                android:textSize="@dimen/x18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dot_chat_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x70"
            android:paddingTop="@dimen/x10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dot_chat_2"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/circle_notice_shape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/iv_img_face"
            android:orientation="vertical"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x20"
                android:text="sdsds"
                android:textColor="@color/Black_000000"
                android:textSize="@dimen/x28"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x20"
                android:paddingTop="@dimen/x10"
                android:text="1213213"
                android:textSize="@dimen/x26" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/Gray_CCCCCC" />
</LinearLayout>