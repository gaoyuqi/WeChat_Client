<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/x10"
    android:paddingTop="@dimen/x10">

    <!--微信-->
    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y70"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@drawable/weixin_pressed" />

            <LinearLayout
                android:id="@+id/ll_wx_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50">

                <TextView
                    android:id="@+id/tv_dot_wx_1"
                    android:visibility="gone"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/circle_notice_shape"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/White_FFFFFF"
                    android:textSize="@dimen/x18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wx_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_dot_wx_2"
                    android:layout_width="@dimen/x20"
                    android:visibility="gone"
                    android:layout_height="@dimen/x20"
                    android:background="@drawable/circle_notice_shape" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_wx"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/Green_00B657"
            android:textSize="@dimen/x22" />
    </LinearLayout>
    <!--通讯录-->
    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_contact"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y70"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@drawable/contact_list_normal" />

            <LinearLayout
                android:id="@+id/ll_contact_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50">

                <TextView
                    android:id="@+id/tv_contact_wx_1"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:visibility="gone"
                    android:background="@drawable/circle_notice_shape"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/White_FFFFFF"
                    android:textSize="@dimen/x18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_contact_wx_2"
                    android:visibility="gone"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:background="@drawable/circle_notice_shape" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="@color/Black_666666"
            android:textSize="@dimen/x22" />
    </LinearLayout>
    <!--发现-->
    <LinearLayout
        android:id="@+id/ll_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_find"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y70"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@drawable/find_normal" />

            <LinearLayout
                android:id="@+id/ll_find_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_find_wx_1"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/circle_notice_shape"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="@color/White_FFFFFF"
                    android:textSize="@dimen/x18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_find_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_find_wx_2"
                    android:visibility="gone"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:background="@drawable/circle_notice_shape" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_find"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/Black_666666"
            android:textSize="@dimen/x22" />
    </LinearLayout>
    <!--我-->
    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y70"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/x10"
                android:scaleType="fitXY"
                android:src="@drawable/profile_normal" />

            <LinearLayout
                android:id="@+id/ll_mine_dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50">

                <TextView
                    android:id="@+id/tv_mine_wx_1"
                    android:layout_width="@dimen/x35"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/circle_notice_shape"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="99"
                    android:textColor="@color/White_FFFFFF"
                    android:textSize="@dimen/x18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine_dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x50"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_mine_wx_2"
                    android:visibility="gone"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:background="@drawable/circle_notice_shape" />
            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="@dimen/x50"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/Black_666666"
            android:textSize="@dimen/x22" />
    </LinearLayout>

</LinearLayout>

